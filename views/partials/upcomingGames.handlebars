<div class="col-md-4 game-card"> 
  <div class="card m-5" style="width: 25rem;">
    <img class="card-img-top" id="game-img" src="{{gameImage}}" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title" id="game-name">{{gameName}}</h5>
      <p class="card-text" id="game-release-date">{{format_date releaseDate}}</p>
      <a href="/" class="btn btn-primary"><i class="fas fa-plus-circle"></i></a>
    </div>
  </div>
</div>
