<div class="row d-flex justify-content-center">
    {{#each wishlist.games as |game|}}
    {{> wishlistGames}}
    {{/each}}
</div>
{{#if comments.length}}
{{#each comments as |comment|}}
<div class="card mt-5 mx-3 comment-entry">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div><h5 class="m-0">Comment by {{user.username}}</h5></div>
    </div>
    <div class="card-body">
        <h4>{{comment.comment_text}}</h4>
    </div>
    {{!-- <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button> --}}
</div>
{{/each}}
{{/if}}
<div class="card m-5">
    <div class="card-header">
    </div>
    <div class="card-body">
        <form class="form comment">
            <div class="form-group">
                <label for="comment-description">Comment</label>
                <textarea class="form-control" id="comment-description" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>

<script src="/scripts/createComment.js"></script>